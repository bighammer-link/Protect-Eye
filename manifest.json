{
  "manifest_version": 3,
  "name": "Protect Eye",
  "description": "轻量化护眼取色与亮度调节扩展，提供多种配色与关停策略。",
  "version": "0.1.0",
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Protect Eye",
    "default_icon": {
      "48": "icons/icon-48.png",
      "32": "icons/icon-32.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/contentScript.js"
      ],
      "run_at": "document_start"
    }
  ]
}
